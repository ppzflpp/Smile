<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/home_page"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@drawable/bottom_bar_item_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="2dip"
        android:paddingTop="2dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_page_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_home_page"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/near_search"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@drawable/bottom_bar_item_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="2dip"
        android:paddingTop="2dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/near_search_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_near_search"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_info"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@drawable/bottom_bar_item_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="2dip"
        android:paddingTop="2dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/user_info_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_user_info"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_order"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@drawable/bottom_bar_item_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="2dip"
        android:paddingTop="2dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_order_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_my_order"
            android:textSize="14sp" />


    </LinearLayout>

</LinearLayout>

